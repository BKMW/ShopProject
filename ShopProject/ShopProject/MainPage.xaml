    <!----> 
    <StackLayout Padding="0" VerticalOptions="FillAndExpand" BackgroundColor="Black" Spacing="0" >
    <ListView x:Name="ProductslistView" SeparatorVisibility="None" HasUnevenRows="True" BackgroundColor="Aquamarine" >
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <Frame BindingContext="{Binding Item1}" Padding="1" BackgroundColor="#ffffff" HasShadow="false" OutlineColor="#bbb" Margin="0,0,0,0">
                <Grid>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                  </Grid.RowDefinitions>
                    <StackLayout Grid.Row="0" Padding="0,0,0,0" Spacing="1">
                        <Label Text="{Binding Status}" FontSize="12" TextColor="#b9bccb" HorizontalOptions="Center"  VerticalOptions="Center" LineBreakMode="TailTruncation"/>

                    </StackLayout>
                  <Frame Grid.Row="1" BackgroundColor="White" Padding="0" HasShadow="False">
                    <Image Source="{Binding Image}" Aspect="AspectFill"
                           HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="80"/>
                  </Frame>
                  <StackLayout Grid.Row="2" Padding="0,0,0,0" Spacing="0">

                    <Label Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="Center" FontSize="14"
                           TextColor="#5a5c60"/>
                    <Label Text="{Binding Price}" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12" LineBreakMode="TailTruncation"
                           TextColor="#5a5c60"/>
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                      </Grid.ColumnDefinitions>
                      <!--Button Grid.Column="1" Text="Detail" VerticalOptions="Center" BorderRadius="16" FontSize="10" HeightRequest="34" BorderWidth="0"/-->
                    </Grid>
                  </StackLayout>
                </Grid>
              </Frame>
              
              <Frame Grid.Column="2" IsVisible="{Binding IsVisible}"
                     BindingContext="{Binding Item2}" Padding="1" BackgroundColor="#ffffff" HasShadow="False" OutlineColor="#bbb" Margin="0">
                <Grid>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                  </Grid.RowDefinitions>
                    <StackLayout Grid.Row="0" Padding="0,0,0,0" Spacing="1">


                <Label Text="{Binding Status}" FontSize="12" TextColor="#b9bccb" HorizontalOptions="Center"  VerticalOptions="Center" LineBreakMode="TailTruncation"/>
                    </StackLayout>
                  <Frame Grid.Row="1" BackgroundColor="White" Padding="5" HasShadow="False">
                    <Image Source="{Binding Image}" Aspect="AspectFill"
                           HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="80"/>
                  </Frame>
                  <StackLayout Grid.Row="2" Padding="0,0,0,0" Spacing="1">

                    <Label Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="Center" FontSize="14"
                           TextColor="#5a5c60"/>
                    <Label Text="{Binding Price}" HorizontalOptions="Center" VerticalOptions="Center" FontSize="12" LineBreakMode="TailTruncation"
                           TextColor="#5a5c60"/>
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                      </Grid.ColumnDefinitions>
                      <!--Button Grid.Column="1" Text="Detail" VerticalOptions="Center" BorderRadius="16" FontSize="10" HeightRequest="34" BorderWidth="0"/-->
                    </Grid>
                  </StackLayout>
                </Grid>
              </Frame>
            </Grid>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
<!---->
    
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="End" HeightRequest="60" BackgroundColor="#443e42" Spacing="0">
